<bg xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd'
	>
	<horizontal horizontal-fit="PreferredSize">
		<slider-setting text="Game Volume" value="gameVolume" increment="0.01" min="0.0" max="1.0" show-buttons="true" on-change="setGameVolume"/>
		<slider-setting text="Preview Volume" value="previewVolume" increment="0.01" min="0.0" max="1.0" show-buttons="true" on-change="setPreviewVolume"/>
		<slider-setting text="Background Volume" value="backgroundVolume" increment="0.01" min="0.0" max="1.0" show-buttons="true" on-change="setBackgroundVolume"/>
	</horizontal>
</bg>